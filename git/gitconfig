[alias]
	last = log -1 HEAD --abbrev-commit --pretty=format:'%h - %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
    stat = status -sb
    logf = log --all --graph --pretty=format:'%Cred%h%Creset -%C(auto)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
    ls   = log --oneline